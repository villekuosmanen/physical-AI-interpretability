# Environment variables for Physical AI Attention Mapper

# Python environment
export PYTHONPATH="${PWD}/src:${PWD}:${PYTHONPATH}"

# CUDA/GPU settings
export CUDA_VISIBLE_DEVICES=0
export TORCH_CUDA_ARCH_LIST="7.0;7.5;8.0;8.6"

# Dataset and model paths
export DATASET_REPO_ID="lerobot/svla_so101_pickplace"
export POLICY_PATH="../lerobot/outputs/train/act_johns_arm/checkpoints/last/pretrained_model"
export OUTPUT_DIR="./analysis_output"

# Model settings
export MODEL_DEVICE="cuda"
export MODEL_DTYPE="float32"  # Options: float32, float16, bfloat16

# Video encoding settings
export VIDEO_FPS=20

# SAE training settings
export SAE_NUM_TOKENS=602
export SAE_TOKEN_DIM=512
export SAE_FEATURE_DIM=4096
export SAE_DEVICE="cuda"
export SAE_USE_BFLOAT16=false

# Memory management
export MAX_MEMORY_GB=16
export CACHE_DIR="./cache"

# Logging
export LOG_LEVEL="INFO"